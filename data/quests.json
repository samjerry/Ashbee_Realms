{
  "quests": {
    "main_story": [
      {
        "id": "awakening",
        "name": "The Awakening",
        "description": "Discover why you've been brought to Ashbee Realms and what threatens the land",
        "chapter": 1,
        "required_level": 1,
        "prerequisites": [],
        "objectives": [
          {
            "type": "talk_to_npc",
            "target": "elder_thorne",
            "description": "Speak with Elder Thorne in the village"
          },
          {
            "type": "explore_location",
            "target": "whispering_woods",
            "description": "Explore the Whispering Woods"
          },
          {
            "type": "kill_monster",
            "target": "forest_wolf",
            "count": 3,
            "description": "Defeat 3 Forest Wolves"
