          {
            "type": "explore_location",
            "target": "wolf_den",
            "description": "Find the Wolf Den"
          },
          {
            "type": "kill_boss",
            "target": "alpha_wolf",
            "description": "Defeat the Alpha Wolf"
          }
        ],
