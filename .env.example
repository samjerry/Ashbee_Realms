# Session & server config
SESSION_SECRET=replace_this_with_a_secret
BASE_URL=http://localhost:3000
PORT=3000

# Optional: announcement cooldowns (milliseconds)
GLOBAL_COOLDOWN_MS=2000
USER_COOLDOWN_MS=5000
