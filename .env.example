# Database (optional: PostgreSQL for production, SQLite used locally if not set)
# DATABASE_URL=postgresql://user:pass@host:port/dbname

# Bot credentials
BOT_USERNAME=your_bot_username
BOT_OAUTH_TOKEN=oauth:xxxxxxxxxxxxxx
CHANNEL=your_channel_name

# Twitch OAuth credentials (from dev.twitch.tv/console/apps)
TWITCH_CLIENT_ID=your_twitch_client_id
